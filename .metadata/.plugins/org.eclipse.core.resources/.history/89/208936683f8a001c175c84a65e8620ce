package conditions;

import java.util.Scanner;

public class Quiz04 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		// 학접 입력 받아 구분하여 문자열 출력
		System.out.println("학점을 입력해 주세요(A-E). : ");
		String grade = sc.next();
		if (grade == "A" || grade == "B") {
			System.out.println("학점 : " + grade + ", 결과 : 참 잘했어요!");
		} else if (grade == "C" || grade == "D") {
			System.out.println("학점 : " + grade + ", 결과 : 분발합시다.");
			
		} else if ((grade == "E" || grade == "F"){
			System.out.println("학점 : " + grade);
			
		} else {
			System.out.println("잘못입력하였습니다.");
		}
		
		// 년도를 입력받아 윤년 펴연 판별해주는 프로그램 작성
		System.out.println("년도를 입력해주세요. : ");
		int year = sc.nextInt();
		String res;
		if (year % 4 == 0) {
			if (year % 100 == 0) {
				if (year % 400 == 0) {
					System.out.println("연도 : " + year + ", 평년입니다.");
					
				} else {
					System.out.println("연도 : " + year + ", 윤년입니다.");
					
				}
			}
		} else {
			System.out.println("연도 : " + year + ", 평년입니다.");
		}
	}
}
